{
  "scripts": {
    "prepush": "yarn build; yarn danger:prepush",
    "danger:prepush": "yarn danger local --base development -v -t --dangerfile danger/dangerfile.ts",
    "commit": "git-cz",
    "tsc": "tsc",
    "release": "standard-version",
    "prepare": "husky install",
    "pdf-changelog": "markdown-pdf CHANGELOG.md -o build/CHANGELOG.pdf"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@commitlint/cz-commitlint": "^14.1.0",
    "@damlys/standard-version-updater-gradle": "1.0.0",
    "commitizen": "^4.2.4",
    "danger": "^10.6.6",
    "danger-plugin-conventional-commitlint": "^2.0.0",
    "husky": "^7.0.2",
    "standard-version": "^9.3.2",
    "typescript": "^4.3.5",
    "markdown-pdf": "10.0.0"
  },
  "dependencies": {
    "@ixigo-packages/danger-plugin-merge-request-size": "^1.0.14",
    "danger-plugin-lint-report": "^1.5.4"
